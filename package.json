  "keywords": [
    "mcp",
    "semgrep",
    "static-analysis",
    "security",
    "code-quality"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "vitest": "^3.0.7"
  },
  "dependencies": {
    "axios": "^1.0.0",
    "zod": "^3.24.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "semgrep-mcp": "./build/index.js"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
