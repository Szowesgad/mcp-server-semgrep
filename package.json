{
  "name": "semgrep-server",
  "version": "1.0.0",
  "description": "MCP Server for Semgrep Integration",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "ts-node --esm src/index.ts",
